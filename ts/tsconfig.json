//https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
{
  "compilerOptions": {
    "outFile": "tsc.js",  //we want each output file to be generated right there
    //"noImplicitAny": true,
    //"preserveConstEnums": true,
